<?xml version="1.0" encoding="UTF-8"?>
<!-- Mapper XML 설정 태그 -->
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

	
<!-- namespace -->
<mapper	namespace="com.eatplatform.web.persistence.UserListMapper">

	<resultMap type="com.eatplatform.web.domain.UserListVO" id="userListResultMap">
		<id property="userId" column="USER_ID" />
		<result property="userPw" column="USER_PW"/>
		<result property="userEmail" column="USER_EMAIL"/>
		<result property="userPhone" column="USER_PHONE"/>
		<result property="userName" column="USER_NAME"/>
		<result property="userAuth" column="USER_AUTH"/>
		<result property="userActiveYn" column="USER_ACTIVE_YN"/>
		<result property="userRegDate" column="USER_REG_DATE"/>
	</resultMap>
	
	<select id="selectUserListByUserId" resultMap="userListResultMap">
		SELECT * FROM USER_LIST 
		WHERE USER_ID = #{userId}
	</select>
	
	<insert id="insertUserList">
		INSERT INTO USER_LIST
		VALUES(
			#{userId},
			#{userPw},
			#{userEmail},
			#{userPhone},
			#{userName},
			#{userAuth},
			#{userActiveYn},
			SYSDATE
		)
	</insert>
	
	<update id="updateUserList">
		UPDATE USER_LIST 
		SET USER_PW = #{userPw},
			USER_EMAIL = #{userEmail},
			USER_PHONE = #{userPhone},
			USER_NAME = #{userName}
		WHERE USER_ID = #{userId}
	</update>
	
	<delete id="deleteUserList">
		DELETE USER_LIST
		WHERE USER_ID = #{userId}
	</delete>

</mapper>